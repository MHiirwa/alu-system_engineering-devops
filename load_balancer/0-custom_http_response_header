#!/usr/bin/env bash
# Install and configure Nginx with X-Served-By header

# Update packages and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Build new Nginx configuration
new_config="server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.nginx-debian.html;

    server_name _;

    # Custom header required by ALX checker
    add_header X-Served-By \$hostname;
}
"

# Write config safely with sudo
echo "$new_config" | sudo tee /etc/nginx/sites-available/default > /dev/null

# Test and restart Nginx
sudo nginx -t && sudo systemctl restart nginx

